@model WasteManager.Models.CustomerDaysViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.Id" />
            <input type="hidden" asp-for="Customer.IdentityUserId" />
            <input type="hidden" asp-for="Customer.IdentityUser" />
            <input type="hidden" asp-for="Customer.MonthlyExtraDate" />
            <input type="hidden" asp-for="Customer.PickupPause" />
            <input type="hidden" asp-for="Customer.PickupResume" />
            <input type="hidden" asp-for="Customer.Balance" />
            <input type="hidden" asp-for="Customer.Lat" />
            <input type="hidden" asp-for="Customer.Lng" />
            <div class="form-group">
                <label asp-for="Customer.FirstName" class="control-label"></label>
                <input asp-for="Customer.FirstName" class="form-control" />
                <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.LastName" class="control-label"></label>
                <input asp-for="Customer.LastName" class="form-control" />
                <span asp-validation-for="Customer.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.StreetAddress" class="control-label"></label>
                <input asp-for="Customer.StreetAddress" class="form-control" />
                <span asp-validation-for="Customer.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.CityState" class="control-label"></label>
                <input asp-for="Customer.CityState" class="form-control" />
                <span asp-validation-for="Customer.CityState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Zip" class="control-label"></label>
                <input asp-for="Customer.Zip" class="form-control" />
                <span asp-validation-for="Customer.Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.WeeklyPickupDay" class="control-label"></label>
                <select asp-for="Customer.WeeklyPickupDay" asp-items="Model.DaysAvailable" class="form-control"></select>
                <span asp-validation-for="Customer.WeeklyPickupDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
