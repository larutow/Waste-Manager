@model WasteManager.Models.CustomerDaysViewModel

@{
    ViewData["Title"] = "PickupServices";
}

<h1>Pickup Services</h1>

<h4>@Model.Customer.FirstName @Model.Customer.LastName</h4>
<hr />
<div class="row">
    <div class="col-2">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-action="Index">User Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="#">Service Options</a>
            </li>
        </ul>
    </div>
    <div class="col-md-10">
        <form asp-action="PickupServices">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.Id" />
            <div class="form-group">
                <label asp-for="Customer.WeeklyPickupDay" class="control-label"></label>
                <select asp-for="Customer.WeeklyPickupDay" asp-items ="Model.DaysAvailable" class="form-control"></select>
                <span asp-validation-for="Customer.WeeklyPickupDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.MonthlyExtraDate" class="control-label"></label>
                <input type="date" asp-for="Customer.MonthlyExtraDate" class="form-control" />
                <span asp-validation-for="Customer.MonthlyExtraDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.PickupPause" class="control-label"></label>
                <input type="date" asp-for="Customer.PickupPause" class="form-control" />
                <span asp-validation-for="Customer.PickupPause" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.PickupResume" class="control-label"></label>
                <input type="date" asp-for="Customer.PickupResume" class="form-control" />
                <span asp-validation-for="Customer.PickupResume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
